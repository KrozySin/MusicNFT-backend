{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier", "airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["prettier"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-underscore-dangle": 0,
        "no-continue": 0,
        "no-await-in-loop": 0,
        "comma-dangle": 0,
        "no-return-await": 0,
        "operator-linebreak": [2, "after"],
        "prefer-destructuring": ["error", {"AssignmentExpression": {"array": false}}],
        "no-console": 0,
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "tabWidth": 4 // disable prettier indent rule, https://github.com/eslint/eslint/issues/10930
        }]
    }
}